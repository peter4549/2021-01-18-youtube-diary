<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/search_list_item_image_width"
        android:layout_height="@dimen/search_list_item_image_height"
        android:layout_marginBottom="@dimen/spacing_smallest"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_smallest"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/view_colorBar"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        tools:background="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_smallest"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_smallest"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_smallest"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_smallest"
        android:textSize="@dimen/text_size_medium"
        tools:text="name: sirace show" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_smallest"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_smallest"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_small"
        tools:text="10" />

    <ImageView
        android:id="@+id/image_more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/spacing_smallest"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_smallest"
        app:srcCompat="@drawable/ic_round_more_vert_24"
        tools:ignore="ContentDescription" />
</LinearLayout>